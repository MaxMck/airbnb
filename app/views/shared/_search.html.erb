<%= form_tag(apartments_path, :method => "get", id: "search-form") do  %>
  <%= text_field_tag :query, params[:query], placeholder: "Search a city" %>

    <div class="field">
    <%= label_tag :start_date %><br>
    <%= date_field_tag :start_date, params[:start_date], placeholder: "Choose a start date" %>
  </div>
  <div class="field">
    <%= label_tag :end_date %><br>
    <%= date_field_tag :end_date, params[:end_date], placeholder: "Choose an end date" %>

  <%= submit_tag "Search", :name => nil %>
<% end %>


