  <ul style="list-style-type:none">
  </br>
    <li><strong><%= apartment.title %></strong></li>
    <li><%= image_tag apartment.picture.url(:medium) %></li>
    <li><%= apartment.city %>, <%= apartment.country %></li>
    <li>Description: <%= apartment.description %></li>
