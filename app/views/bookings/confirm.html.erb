<h1>Please confirm your new reservation: </h1>


<div class="text-center">
  <p>
    <%= image_tag @apartment.picture.url(:medium) %>
  </p>

<p>
    <strong>Start Date:</strong>
    <%= @booking.start_date %>
  </p>

  <p>
    <strong>End Date:</strong>
    <%= @booking.end_date %>
  </p>

  <p>
    <strong>Where: :</strong>
    <%= @apartment.address %>, <%= @apartment.city %>, <%= @apartment.country %>
  </p>


  <p>
    <strong>Price per night:</strong>
    <%= @apartment.price_per_night %> €
  </p>

  <p>
    <strong>Total Price:</strong>
    <% price = @apartment.price_per_night * (@booking.end_date - @booking.start_date) %>
    <%= price.to_i %> €
  </p>

  <p>
    <strong>Capacity:</strong>
    <%= @apartment.capacity %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @apartment.description %>
  </p>

<%= link_to 'Confirm',  apartment_bookings_path( @apartment.id, booking: {start_date: @booking.start_date, end_date: @booking.end_date, apartment_id: @apartment.id}), method: :post %>
<br>
<br>
<%= link_to 'Back',  new_apartment_booking_path(@apartment.id) %>

</div>